@page "{id:int?}"
@model DRM.Pages_Devices.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit: @Html.DisplayFor(model => model.Device.FullName)</h2>

<h4>Device</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Device.Id" />
            <div class="form-group">
                <label asp-for="Device.DeviceType.DeviceTypeName" class="control-label"></label>
                <select asp-for="Device.DeviceTypeId" class="form-control" asp-items="ViewBag.DeviceTypeId"></select>
                <span asp-validation-for="Device.DeviceTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Device.Name" class="control-label"></label>
                <input asp-for="Device.Name" class="form-control" />
                <span asp-validation-for="Device.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Device.IPAddress" class="control-label"></label>
                <input asp-for="Device.IPAddress" class="form-control" />
                <span asp-validation-for="Device.IPAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Device.Station" class="control-label"></label>
                <input asp-for="Device.Station" class="form-control" />
                <span asp-validation-for="Device.Station" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Device.Bay" class="control-label"></label>
                <input asp-for="Device.Bay" class="form-control" />
                <span asp-validation-for="Device.Bay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
